@model List<SwayASP.Models.Line>
@{
    Layout = "_Layout";
    ViewBag.Title = "Lines";
}
<h2>Stations:</h2>
<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Opened</th>
        <th>Stations</th>
        <th>Branches</th>
        <th></th>
    </tr>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Id</td>
            <td>@s.Name</td>
            <td>@s.OpeningYear</td>
            <td>@s.StationCount</td>
            <td>@s.HasBranches</td>
            <td><a asp-action="EditLine" asp-controller="Editor" asp-route-id="@s.Id" class="edit-link">Edit</a></td>
        </tr>
    }
</table>
